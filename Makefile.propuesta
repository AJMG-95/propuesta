.PHONY: all check pro

all: check pro

check:
	@./check-pandoc.sh
	@./check-vendor.sh
	@bundle install --path vendor/bundle

pro:
	@php requisitos.php
	@pandoc -f markdown-smart -s propuesta.md requisitos.md -o pro.adoc
	@./replace.sh
	@echo "Generando propuesta.pdf..."
	@bundle exec asciidoctor-pdf propuesta.adoc
	@rm -f pro.adoc propuesta.adoc
